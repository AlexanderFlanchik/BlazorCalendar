@using BlazorCalendar.Client.Components.Layout

@inherits LayoutComponentBase

<div class="wrapper">
    <div class="page">
        <div class="calendar-header">
            My Calendar
        </div>
        <NavMenu />
        <main>
            <article class="content px-4">
                @Body
            </article>
        </main>
        <Footer />
    </div>
</div>

